<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.ac.it_college.std.reachable_company.CouponUploadFragment">

    <Button
        android:id="@+id/btn_coupon_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_coupon_select" />

    <Button
        android:id="@+id/btn_coupon_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_coupon_upload" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_file_name"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_coupon_preview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

</LinearLayout>
