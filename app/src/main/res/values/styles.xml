<resources>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <!-- ToolBarの背景色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- ToolBarのタイトルテキスト色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- ToolBarのオプションメニューのOverflowアイコンの色 -->
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Transitionの有効化 -->
        <item name="android:windowContentTransitions">true</item>
        <!-- ActionModeのオーバーレイを有効化 -->
        <item name="windowActionModeOverlay">true</item>
        <!-- ActionModeの背景色を設定-->
        <item name="android:actionModeBackground">@color/action_mode_background</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the coupon_select_menu icon -->
        <item name="searchIcon">@drawable/ic_action_search</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@null</item>
        <!-- Gets rid of the coupon_select_menu icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_hint</item>
    </style>

    <style name="divider">
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.12</item>
    </style>

    <style name="divider_horizontal" parent="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="divider_vertical" parent="divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
